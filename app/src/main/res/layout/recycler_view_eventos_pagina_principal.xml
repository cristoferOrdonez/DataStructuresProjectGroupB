<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="7dp">

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/textViewTituloEventoPaginaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/fondo"
        android:fontFamily="@font/roslindale_condensed_medium_edu"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:text="Titulo del Evento"
        android:textColor="@color/gris_oscuro_box_background_color"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFechaEventoPaginaPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_regular"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:text="Fecha del evento"
            android:textColor="@color/colorTexto"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewHorarioEventoPaginaPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_regular"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="Horario del evento"
            android:textColor="@color/colorTexto"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="@color/design_default_color_background" />

    <TextView
        android:id="@+id/textViewLugarEventoPaginaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_regular"
        android:padding="10dp"
        android:text="Lugar del evento"
        android:textColor="@color/colorTexto"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewCostoEventoPaginaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_regular"
        android:padding="10dp"
        android:text="Costo del evento"
        android:textColor="@color/colorTexto"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewTipoEventoPaginaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_regular"
        android:padding="10dp"
        android:text="Tipo de evento"
        android:textColor="@color/colorTexto"
        android:textSize="15sp" />

</LinearLayout>